#billboard
  .container
    #feedback-link
      %a.btn.btn-sm.btn-success{href: '/comments.html', target: '_blank'} Оставить комментарий
    .row
      .col-sm-5
        %p.text-center
          / = image_tag "promo.png", width: 270, height: 751.5, srcset: "promo@2x.png 2x"
          = image_tag "promo.png", width: 250, height: 696, srcset: "promo@2x.png 2x"
      .col-sm-7
        #promo-text
          %h1.brand Стих&ensp;Дня
          %h6.concept Новое стихотворение каждый день
          %p.store-badges
            %span.appstore-badge
              %a{href:"https://itunes.apple.com/ru/app/allegrotajm/id524992172", target:"_blank"}
                = image_tag "badge-appstore.png", width: 135, height: 40
