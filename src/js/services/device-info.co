class AP.DeviceInfo
  constructor: ->
    @setScreenWidth()
    $(window).on 'orientationchange', @orientationChanged

  orientationChanged: =>
    @setScreenWidth()

  setScreenWidth: ->
    @screenWidth = $(window).width()

  share: ({text, heading, url}) ->
    console.log "opening the sharing dialog..."
    window.plugins?.socialsharing?.share text, heading, null, url
