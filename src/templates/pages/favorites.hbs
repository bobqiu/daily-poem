{{#navbarBox}}
  <div class="left">
    {{ navbar-button linkClass="open-panel" iconType="menu" }}
  </div>
  <div class="center sliding">Избранное</div>
  <div class="right">
    {{ navbar-button-stub }}
  </div>
{{/navbarBox}}

<div data-page="favorites" class="page favorites-page">
  <div class="page-content">

      {{#if poems}}
        <div class="list-block">
          <ul>
            {{#each poems}}
              {{ list-action-item title=firstLine url=url }}
            {{/each}}
          </ul>
        </div>
      {{else}}
        <div class='empty'>
          <p class='empty-message'>
            Пока пусто
          </p>
          <p class='empty-note'>
            Нажмите на <i class='icon icon-like'></i>
            под стихотворением чтобы добавить его в «Избранное»
          </p>
        </div>
      {{/if}}

  </div>
</div>
