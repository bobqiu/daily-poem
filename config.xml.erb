  <plugin name="cordova-plugin-splashscreen" spec="~3.1.0" />
  <plugin name="cordova-plugin-statusbar" spec="~2.1.1" />
  <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
  <plugin name="cordova-plugin-app-version" spec="~0.1.8" />
  <plugin name="cordova-plugin-x-socialsharing " spec="~5.0.11" />
  <plugin name="cordova-custom-config" spec="~1.2.6" />
  <plugin name="de.appplant.cordova.plugin.local-notification" spec="~0.8.4" /> -->

  <engine name="ios" spec="~4.1.1" />
  <engine name="android" spec="~5.1.1" />
  <engine name="browser" spec="~4.1.0" />
</widget>
