  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <preference name="DisallowOverscroll" value="true" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarStyle" value="lightcontent" />

  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="true"/>
  <preference name="SplashScreenDelay" value="0" />
  <preference name="FadeSplashScreenDuration" value="500"/>
  <!-- <preference name="FadeSplashScreen" value="false"/> -->
  <!-- <preference name="SplashMaintainAspectRatio" value="false" /> -->

  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />

      <preference name="BackupWebStorage" value="none" />
      <preference name="Orientation" value="all" />

      <%- plist_options.each do |key, value| -%>
        <config-file target="*-Info.plist" parent="<%= key %>">
          <%- case value when String -%>
            <string><%= value %></string>
          <%- when true, false -%>
            <<%= value %> />
          <%- end -%>
        </config-file>
      <%- end -%>

      <%- %w(29 40 50 57 58 72 76 87 80 100 114 120 144 152 167 180).each do |size| -%>
        <icon src="assets/app-icons/AppIcon-<%= size %>.png" width="<%= size %>" height="<%= size %>" />
      <%- end -%>

      <%- ios_screen_sizes.each do |w, h| -%>
        <splash src="assets/launch-screens/Default-<%= w %>x<%= h %>.png" width="<%= w %>" height="<%= h %>" />
      <%- end -%>
  </platform>

  <platform name="android">
      <allow-intent href="market:*" />
