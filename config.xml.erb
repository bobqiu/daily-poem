<?xml version='1.0' encoding='utf-8'?>
<widget id="name.sokurenko.DailyPoem"
  xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"
  version="<%= version %>" ios-CFBundleVersion="<%= build_number %>">
  <%# android-versionCode="02132046"   %>
  <name>DailyPoem</name>
  <description>
    DailyPoem â€“ a new poem every day.
  </description>
  <author email="dmitry@sokurenko.name" href="https://allegrotime.firebaseapp.com">
    Dmitry Sokurenko
  </author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <preference name="DisallowOverscroll" value="true" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarStyle" value="lightcontent" />

  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="true"/>
  <preference name="SplashScreenDelay" value="0" />
  <preference name="FadeSplashScreenDuration" value="500"/>
  <!-- <preference name="FadeSplashScreen" value="false"/> -->
  <!-- <preference name="SplashMaintainAspectRatio" value="false" /> -->

  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />

      <preference name="BackupWebStorage" value="none" />
      <preference name="Orientation" value="all" />

      <%- plist_options.each do |key, value| -%>
        <config-file target="*-Info.plist" parent="<%= key %>">
          <%- case value when String -%>
            <string><%= value %></string>
          <%- when true, false -%>
            <<%= value %> />
          <%- end -%>
        </config-file>
      <%- end -%>

      <%- %w(29 40 50 57 58 72 76 87 80 100 114 120 144 152 167 180).each do |size| -%>
        <icon src="assets/app-icons/AppIcon-<%= size %>.png" width="<%= size %>" height="<%= size %>" />
      <%- end -%>

      <%- ios_screen_sizes.each do |w, h| -%>
        <splash src="assets/launch-screens/Default-<%= w %>x<%= h %>.png" width="<%= w %>" height="<%= h %>" />
      <%- end -%>
  </platform>

  <platform name="android">
    <allow-intent href="market:*" />
    <preference name="android-minSdkVersion" value="20" />
    <preference name="android-targetSdkVersion" value="22" />
    <preference name="StatusBarBackgroundColor" value="<%= brand_color %>" />

    <icon   density="ldpi"         src="assets/app-icons-android/android-icon-36.png" />
    <icon   density="mdpi"         src="assets/app-icons-android/android-icon-48.png" />
    <icon   density="hdpi"         src="assets/app-icons-android/android-icon-72.png" />
    <icon   density="xhdpi"        src="assets/app-icons-android/android-icon-96.png" />
    <icon   density="xxhdpi"       src="assets/app-icons-android/android-icon-144.png" />
    <icon   density="xxxhdpi"      src="assets/app-icons-android/android-icon-192.png" />
    <splash density="land-ldpi"    src="assets/app-icons-android/launch-landscape-320.png" />
    <splash density="land-mdpi"    src="assets/app-icons-android/launch-landscape-480.png" />
    <splash density="land-hdpi"    src="assets/app-icons-android/launch-landscape-800.png" />
    <splash density="land-xhdpi"   src="assets/app-icons-android/launch-landscape-1280.png" />
    <splash density="land-xhdpi"   src="assets/app-icons-android/launch-landscape-1600.png" />
    <splash density="land-xhdpi"   src="assets/app-icons-android/launch-landscape-1920.png" />
    <splash density="port-ldpi"    src="assets/app-icons-android/launch-portrait-320.png" />
    <splash density="port-mdpi"    src="assets/app-icons-android/launch-portrait-480.png" />
    <splash density="port-hdpi"    src="assets/app-icons-android/launch-portrait-800.png" />
    <splash density="port-xhdpi"   src="assets/app-icons-android/launch-portrait-1280.png" />
    <splash density="port-xxhdpi"  src="assets/app-icons-android/launch-portrait-1600.png" />
    <splash density="port-xxxhdpi" src="assets/app-icons-android/launch-portrait-1920.png" />
  </platform>

