<?xml version='1.0' encoding='utf-8'?>
<widget id="name.sokurenko.DailyPoem"
  xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"
  version="0.3">
  
  <name>DailyPoem</name>
  <description>
    DailyPoem â€“ a new poem every day.
  </description>
  <author email="dmitry@sokurenko.name" href="https://allegrotime.firebaseapp.com">
    Dmitry Sokurenko
  </author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <preference name="DisallowOverscroll" value="true" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarStyle" value="lightcontent" />

  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="true"/>
  <preference name="SplashScreenDelay" value="0" />
  <preference name="FadeSplashScreenDuration" value="500"/>
  <!-- <preference name="FadeSplashScreen" value="false"/> -->
  <!-- <preference name="SplashMaintainAspectRatio" value="false" /> -->

  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />

      <preference name="BackupWebStorage" value="none" />
      <preference name="Orientation" value="all" />

        <config-file target="*-Info.plist" parent="UIStatusBarStyle">
            <string>UIStatusBarStyleDefault</string>
        </config-file>
        <config-file target="*-Info.plist" parent="UIStatusBarHidden">
            <true />
        </config-file>
        <config-file target="*-Info.plist" parent="UIViewControllerBasedStatusBarAppearance">
            <false />
        </config-file>

        <icon src="assets/app-icons/AppIcon-29.png" width="29" height="29" />
        <icon src="assets/app-icons/AppIcon-40.png" width="40" height="40" />
        <icon src="assets/app-icons/AppIcon-58.png" width="58" height="58" />
        <icon src="assets/app-icons/AppIcon-76.png" width="76" height="76" />
        <icon src="assets/app-icons/AppIcon-87.png" width="87" height="87" />
        <icon src="assets/app-icons/AppIcon-80.png" width="80" height="80" />
        <icon src="assets/app-icons/AppIcon-120.png" width="120" height="120" />
        <icon src="assets/app-icons/AppIcon-152.png" width="152" height="152" />
        <icon src="assets/app-icons/AppIcon-167.png" width="167" height="167" />
        <icon src="assets/app-icons/AppIcon-180.png" width="180" height="180" />

        <splash src="assets/launch-screens/Default-640x960.png" width="640" height="960" />
        <splash src="assets/launch-screens/Default-640x1136.png" width="640" height="1136" />
        <splash src="assets/launch-screens/Default-750x1334.png" width="750" height="1334" />
        <splash src="assets/launch-screens/Default-1242x2208.png" width="1242" height="2208" />
        <splash src="assets/launch-screens/Default-1024x768.png" width="1024" height="768" />
        <splash src="assets/launch-screens/Default-1536x2048.png" width="1536" height="2048" />
        <splash src="assets/launch-screens/Default-960x640.png" width="960" height="640" />
        <splash src="assets/launch-screens/Default-1136x640.png" width="1136" height="640" />
        <splash src="assets/launch-screens/Default-1334x750.png" width="1334" height="750" />
        <splash src="assets/launch-screens/Default-2208x1242.png" width="2208" height="1242" />
        <splash src="assets/launch-screens/Default-768x1024.png" width="768" height="1024" />
        <splash src="assets/launch-screens/Default-2048x1536.png" width="2048" height="1536" />
  </platform>

  <platform name="android">
      <allow-intent href="market:*" />
      <preference name="android-targetSdkVersion" value="23" />
      
  </platform>

  <plugin name="cordova-plugin-x-socialsharing " spec="~5.0.11" />
  <plugin name="cordova-plugin-device" spec="~1.1.1" />
  <plugin name="cordova-plugin-splashscreen" spec="~3.1.0" />
  <plugin name="cordova-plugin-statusbar" spec="~2.1.1" />
  <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
  <plugin name="cordova-plugin-app-version" spec="~0.1.8" />
  <plugin name="cordova-custom-config" spec="~1.2.6" />

  <engine name="ios" spec="~4.1.0" />
  <engine name="android" spec="~5.1.1" />
  <engine name="browser" spec="~4.1.0" />
</widget>
